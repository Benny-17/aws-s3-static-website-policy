{
    "Version": "2012-10-17",
    "Id": "RootOnlyAccessPolicy",
    "Statement": [
      {
        "Sid": "DenyAllExceptRoot",
        "Effect": "Deny",
        "Principal": "*",  
        "Action": "s3:*",  
        "Resource": [
          "arn:aws:s3:::your-bucket-name/*",  
          "arn:aws:s3:::your-bucket-name"    
        ],
        "Condition": {
          "StringNotEqualsIfExists": {
            "aws:PrincipalArn": "arn:aws:iam::AWS_ACCOUNT_ID:root"
          }
        }
      }
    ]
  }
  